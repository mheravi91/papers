---
import BaseLayout from '~/layouts/BaseLayout.astro';

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Mohammad Heravi',
  jobTitle: 'Robotics & Simulation Researcher',
  url: 'https://papers.mheravi.ir/',
  worksFor: {
    '@type': 'Organization',
    name: 'Tampere University',
  },
  sameAs: [
    'https://scholar.google.com/citations?user=DYUEpmsAAAAJ&hl=en',
    'https://orcid.org/0009-0007-2582-083X',
    'https://mheravi.ir',
    'https://github.com/mheravi91',
    'https://www.linkedin.com/in/mheravi'
  ],
};
---
<BaseLayout
  title="Mohammad Heravi — Robotics & Simulation Research"
  description="Research portfolio for Mohammad Heravi, highlighting robotics, simulation, and autonomous excavation contributions."
  structuredData={structuredData}
>
  <main>
    <section class="hero home-hero">
      <p class="hero-eyebrow">Robotics & Simulation</p>
      <h1 class="hero-title">Engineering reliable autonomy for excavation and human-centred robotics</h1>
      <p class="hero-description">
        Explore selected scholarly work, learn more about Mohammad’s background, and find the right channel to start a collaboration.
      </p>
      <div class="hero-actions">
        <a class="btn btn-primary" href="/papers">Browse papers</a>
        <a class="btn btn-secondary" href="/about">About Mohammad</a>
        <a class="btn btn-secondary" href="/contact">Get in touch</a>
      </div>
    </section>
  </main>
</BaseLayout>
