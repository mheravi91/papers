---
import BaseLayout from '~/layouts/BaseLayout.astro';
import PaperCard from '~/components/PaperCard.astro';
import { getCollection } from 'astro:content';

const papers = await getCollection('papers');
const orderedPapers = [...papers].sort((a, b) => b.data.year - a.data.year);

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Mohammad Heravi',
  jobTitle: 'Robotics & Simulation Researcher',
  url: 'https://papers.mheravi.ir/',
  worksFor: {
    '@type': 'Organization',
    name: 'Tampere University',
  },
  sameAs: [
    'https://scholar.google.com/citations?user=DYUEpmsAAAAJ&hl=en',
    'https://orcid.org/0009-0007-2582-083X',
    'https://mheravi.ir',
    'https://github.com/mheravi91',
    'https://www.linkedin.com/in/mheravi',
  ],
};
---
<BaseLayout
  title="Mohammad Heravi — Robotics & Simulation Research"
  description="Research portfolio for Mohammad Heravi, highlighting robotics, simulation, and autonomous excavation contributions."
  structuredData={structuredData}
  showHeader={false}
  showFooter={false}
>
  <main class="page-main">
    <section class="section-shell about-section" id="about">
      <div class="about-intro">
        <div class="about-avatar">
          <img src="/profile.jpg" alt="Portrait of Mohammad Heravi" loading="lazy" />
        </div>
        <div class="about-meta">
          <img class="about-logo" src="/logo.png" alt="Mohammad Heravi logo" loading="lazy" />
          <h1 class="section-title">Mohammad Heravi</h1>
          <p class="about-tagline">Doctoral Researcher &amp; Robotics Engineer</p>
        </div>
      </div>
      <div class="about-grid">
        <div class="about-summary">
          <p>
            I'm a PhD student and doctoral researcher in Automation Technology and Mechanical Engineering at
            <a href="https://www.tuni.fi/en/people/mohammad-heravi" target="_blank" rel="noopener">Tampere University</a>,
            where I explore physics-informed simulation and intelligent machines for dependable field robotics.
          </p>
          <p>
            My work blends high-fidelity modelling, sensing, and control to make heavy machinery safer and more autonomous while keeping engineers and operators closely in the loop.
          </p>
        </div>
        <div class="about-resume">
          <h2>Snapshot</h2>
          <ul class="resume-list">
            <li><strong>Tampere University</strong> — Doctoral Researcher in Intelligent Machines &nbsp;·&nbsp; 2021–present</li>
            <li><strong>University of Tehran</strong> — M.Sc. in Mechanical Engineering &nbsp;·&nbsp; 2019</li>
            <li><strong>Research focus</strong> — Physics-informed learning, excavation autonomy, wearable robotics</li>
            <li><strong>Selected contributions</strong> — Open-access PINN models for rock-motion forecasting; EMG-driven rehabilitation exoskeleton design; Multi-rate sensor fusion for excavation robots</li>
          </ul>
        </div>
      </div>

      <div class="about-links">
        <h2>Links</h2>
        <div class="link-grid">
          <a class="link-card" href="https://scholar.google.com/citations?user=DYUEpmsAAAAJ&hl=en" target="_blank" rel="noopener">
            <span class="link-label">Google Scholar</span>
            <span class="link-meta">Citations &amp; publications</span>
          </a>
          <a class="link-card" href="https://orcid.org/0009-0007-2582-083X" target="_blank" rel="noopener">
            <span class="link-label">ORCID</span>
            <span class="link-meta">0009-0007-2582-083X</span>
          </a>
          <a class="link-card" href="mailto:mohammad.heravi@tuni.fi">
            <span class="link-label">Email</span>
            <span class="link-meta">mohammad.heravi@tuni.fi</span>
          </a>
          <a class="link-card" href="https://github.com/mheravi91" target="_blank" rel="noopener">
            <span class="link-label">GitHub</span>
            <span class="link-meta">@mheravi91</span>
          </a>
        </div>
      </div>
    </section>

    <section class="section-shell papers-section" id="papers">
      <span class="section-heading">Publications</span>
      <h2 class="section-title">Selected Papers</h2>
      <div class="paper-grid">
        {orderedPapers.map((entry) => (
          <PaperCard entry={entry} />
        ))}
      </div>
    </section>
  </main>
</BaseLayout>
