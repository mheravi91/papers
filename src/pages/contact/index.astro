    <section class="section-shell contact-section">
      <div class="contact-grid">
        <a class="contact-card" href="mailto:mo@mheravi.ir">
          <span class="contact-icon" aria-hidden="true">📧</span>
          <div>
            <strong>Email</strong>
            <p>mo@mheravi.ir</p>
          </div>
        </a>
        <a class="contact-card" href="https://mheravi.ir" target="_blank" rel="noopener">
          <span class="contact-icon" aria-hidden="true">🌐</span>
          <div>
            <strong>Website</strong>
            <p>mheravi.ir</p>
          </div>
        </a>
        <a class="contact-card" href="https://scholar.google.com/citations?user=DYUEpmsAAAAJ&hl=en" target="_blank" rel="noopener">
          <span class="contact-icon" aria-hidden="true">🎓</span>
          <div>
            <strong>Google Scholar</strong>
            <p>Publication metrics and citations</p>
          </div>
